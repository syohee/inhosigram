<div class="picture">
  <div class="picture_user">
    <%= image_tag current_user.profile.image.url if defined?(current_user.id) && current_user.profile.image.url %>
    <%= @picture.user.name %>
  </div>
  
  <div class="picture_image"><%= image_tag @picture.image.url if @picture.image.url %></div>
  
  <div class="picture_bottom">
    
    <div class="picture_option">
      <% unless @picture.user_id == current_user.id %>
        <% if @favorite.present? %>
          <%= link_to image_tag('/assets/favorite_on.PNG'), favorite_path(id: @favorite.id), method: :delete %>
        <% else %>
          <%= link_to image_tag('/assets/favorite_off.PNG'), favorites_path(picture_id: @picture.id), method: :post %>
        <% end %>
      <% end %>
    </div>
    
    <div class="picture_bottom_user"><%= @picture.user.name %></div>
    <div class="picture_content"><%= @picture.content %></div>
      
  </div>
</div>
