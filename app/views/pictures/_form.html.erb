<script type="text/javascript" src="/assets/preview.js"></script>
<div class="form">
  <%= form_with(model: @picture, local: true, url: choose_new_or_edit) do |form| %>
  
    
    <label for="image_upload" class="preview"> 
      <div class="label_text">Choose File</div>
      <div class="preview_image"><%= image_tag @picture.image.url if @picture.image.url %></div>
      
      <span class="upload_image"><%= form.file_field :image, id: 'image_upload' %></span> 
    </label>
    

    
    <div class="form-group">
       <%= form.label :content %>
       <%= form.text_field :content, class: 'form-control' %>
    </div>
    
    <%= form.hidden_field :image_cache %>
    
    
    <%= form.submit class: 'button form_submit' %>
  
    
  <% end %>

  <div class="form_back"><%= link_to 'back', pictures_path, class: 'button'%></div>

</div>