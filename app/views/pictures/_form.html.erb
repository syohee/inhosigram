<div class="form">
  <%= form_with(model: @picture, local: true, url: choose_new_or_edit) do |form| %>
    
    <div class="form-group">
       <%= form.label :content %>
       <%= form.text_field :content, class: 'form-control' %>
    </div>
    
   
    <label class="upload_label"> File Select
      <span class="upload_image"><%= form.file_field :image %></span> 
    </label>
    
    <%= form.hidden_field :image_cache %>
    
    
    <%= form.submit class: 'button form_submit' %>
  
    
  <% end %>

  <div class="form_back"><%= link_to 'back', pictures_path, class: 'button'%></div>

</div>